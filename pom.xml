		<eoaUrl>http://192.168.0.96/eoa/</eoaUrl>
		<excludeUrl></excludeUrl>
		<url.success>http://192.168.0.96/eoa</url.success>
		<captcha.store>redisCaptchaStore</captcha.store>
		<cache.store>redisMapCacheStore</cache.store>
	  </properties>
	  <build>
		<plugins>
		  <plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-war-plugin</artifactId>
			<version>2.4</version>
			<configuration>
			  <webResources>
				<resource>
				  <directory>src/main/redisconfig</directory>
				  <targetPath>WEB-INF/spring-configuration</targetPath>
				  <includes>
					<include>*.xml</include>
				  </includes>
				</resource>
			  </webResources>
			</configuration>
		  </plugin>		  
		</plugins>
	  </build>
	</profile>
  </profiles>

</project>
