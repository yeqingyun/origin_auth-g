		<jdbc.driverClassName>com.microsoft.sqlserver.jdbc.SQLServerDriver</jdbc.driverClassName>
		<jdbc.url>jdbc:sqlserver://192.168.0.88:1433;DatabaseName=jz_gnsy</jdbc.url>
		<jdbc.username>sa</jdbc.username>
		<jdbc.password>sqlserver2008_88</jdbc.password>

		<base.path>http://localhost:8080/</base.path>

		<redis.hosts>192.168.0.96</redis.hosts>
		<redis.port>6379</redis.port>
		<redis.database_num>1</redis.database_num>
		<cas.st_time>1800000</cas.st_time>
		<cas.tgt_time>1800000</cas.tgt_time>
		
