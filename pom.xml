		<cas.st_time>1800000</cas.st_time>
		<cas.tgt_time>1800000</cas.tgt_time>
		
		<uaamUrl>192.168.0.44</uaamUrl>
		<uaamUser>sa</uaamUser>
		<uaamPassword>12345678</uaamPassword>
		<uaamDb>newuaam</uaamDb>
		
		<eoaUrl>http://localhost:8082/uc/</eoaUrl>
